{
    "name": "setono/bot-detection-bundle",
    "type": "symfony-bundle",
    "description": "A Symfony bundle that allows you to test if a user agent is a bot",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "require": {
        "php": ">=7.4",
        "nette/php-generator": "^3.6",
        "symfony/config": "^4.4 || ^5.0",
        "symfony/dependency-injection": "^4.4 || ^5.0",
        "symfony/http-foundation": "^4.4 || ^5.0.7",
        "symfony/http-kernel": "^4.4 || ^5.1.5"
    },
    "require-dev": {
        "infection/infection": "^0.25.0",
        "phpbench/phpbench": "^1.2",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1",
        "psalm/plugin-symfony": "^3.0",
        "roave/security-advisories": "dev-latest",
        "setono/code-quality-pack": "^2.1.3",
        "symfony/console": "^4.4 || ^5.3",
        "symfony/yaml": "^4.4 || ^5.3",
        "webmozart/assert": "^1.10"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\BotDetectionBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Setono\\BotDetectionBundle\\Tests\\": "tests/"
        }
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "psalm --threads=8",
        "check-style": "ecs check",
        "fix-style": "ecs check --fix",
        "phpunit": "phpunit"
    }
}
